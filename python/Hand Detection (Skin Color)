import cv2
import numpy as np

cap = cv2.VideoCapture(0)
while True:
    _,img = cap.read()
    hsv = cv2.cvtColor(img,cv2.COLOR_BGR2HSV)

    lower = np.array([0,40,80])
    upper = np.array([20,255,255])
    mask = cv2.inRange(hsv, lower, upper)

    cv2.imshow("Hand", mask)
    if cv2.waitKey(1)==27:
        break

cap.release()
cv2.destroyAllWindows()
