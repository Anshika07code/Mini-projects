<h2>Click the Kitty ğŸ±</h2>
<p>Score: <span id="score">0</span></p>
<div id="kitty" onclick="hit()">ğŸ±</div>

<script>
let score = 0;
function moveKitty() {
  kitty.style.top = Math.random() * 300 + "px";
  kitty.style.left = Math.random() * 300 + "px";
}
function hit() {
  score++;
  document.getElementById("score").innerHTML = score;
  moveKitty();
}
setInterval(moveKitty, 1000);
</script>

