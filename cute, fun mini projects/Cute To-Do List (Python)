tasks = []

while True:
    print("\n1.Add Task")
    print("2.View Tasks")
    print("3.Exit")

    choice = input("Choose: ")

    if choice == "1":
        task = input("Task: ")
        tasks.append(task)
        print("âœ¨ Task Added")
    
    elif choice == "2":
        for i, t in enumerate(tasks, 1):
            print(i, t, "ğŸ§")
    
    elif choice == "3":
        break
