<input id="task">
<button onclick="add()">Add</button>

<ul id="list"></ul>

<script>
function add() {
  let li = document.createElement("li");
  li.innerHTML = document.getElementById("task").value + " ‚ú®";
  li.onclick = function() { this.remove(); };
  document.getElementById("list").appendChild(li);
}
</script>

