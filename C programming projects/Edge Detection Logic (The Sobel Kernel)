// Simplified logic for a 3x3 Convolution at a specific (x, y) coordinate
float applyKernel(int image[100][100], int x, int y) {
    int kernel[3][3] = {
        {-1, 0, 1},
        {-2, 0, 2},
        {-1, 0, 1}
    };
    
    float sum = 0;
    for (int i = -1; i <= 1; i++) {
        for (int j = -1; j <= 1; j++) {
            sum += image[x + i][y + j] * kernel[i + 1][j + 1];
        }
    }
    return sum;
}
