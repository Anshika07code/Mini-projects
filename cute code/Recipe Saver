recipes = {}

while True:
    name = input("\nRecipe name (or exit): ")
    if name == "exit":
        break

    ingredients = input("Ingredients: ")
    steps = input("Steps: ")

    recipes[name] = {"ingredients": ingredients, "steps": steps}

print("\nğŸ“– Saved Recipes:")
for r in recipes:
    print("\nğŸ²", r)
    print("Ingredients:", recipes[r]["ingredients"])
    print("Steps:", recipes[r]["steps"])
