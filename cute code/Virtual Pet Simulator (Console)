import time

hunger = 5
happiness = 5

while True:
    print("\nðŸ¾ Virtual Pet")
    print("Hunger:", hunger, "ðŸ—")
    print("Happiness:", happiness, "ðŸ˜Š")

    print("\n1. Feed ðŸ–")
    print("2. Play ðŸŽ¾")
    print("3. Sleep ðŸ˜´")
    print("4. Exit âŒ")

    choice = input("Choose: ")

    if choice == "1":
        hunger = max(0, hunger - 2)
        print("Pet is eating... ðŸ˜‹")

    elif choice == "2":
        happiness += 2
        hunger += 1
        print("Pet is playing... ðŸ•ðŸŽ¾")

    elif choice == "3":
        hunger += 1
        happiness += 1
        print("Pet is sleeping... ðŸ’¤")
        time.sleep(2)

    elif choice == "4":
        break

    else:
        print("Invalid choice!")

    hunger += 1
    happiness = max(0, happiness - 1)

    if hunger >= 10:
        print("âš  Pet is too hungry!")
    if happiness <= 0:
        print("âš  Pet is sad!")
